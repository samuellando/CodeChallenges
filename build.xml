<?xml version = "1.0"?>
<project default = "compile">

  <target name = "debug" description = "Compile source tree java files with debug">
    <mkdir dir = "debug"/>

    <javac destdir = "debug" debug = "on" optimize = "off">
      <src path = "src"/>
    </javac>

    <copy todir = "debug">
      <fileset dir="src" includes="**"/>
    </copy>
  </target>

  <target name = "compile" description = "Compile source tree java files">
    <mkdir dir = "bin"/>

    <javac destdir = "bin">
      <src path = "src"/>
    </javac>
  </target>

  <target name = "clean" description = "remove all files">
    <delete dir = "bin"/>
    <delete dir = "debug"/>
  </target>
</project>
